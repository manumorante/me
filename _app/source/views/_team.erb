<h2>Team</h2>

<div class="row">
  <% 10.times do |n| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= image_tag "http://lorempixel.com/250/250/people/#{n+1}", class:'img-responsive' %>
        <div class="caption">
          <h4><%= lorem.name %></h4>
          <p><%= link_to lorem.email, lorem.email %></p>
        </div>
      </div>
    </div>
  <% end %>

</div>